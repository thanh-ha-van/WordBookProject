<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="@color/orange"
                android:startColor="@color/blue_90"
                android:type="linear" />
            <corners android:radius="25dp" />
            <size
                android:width="300dp"
                android:height="40dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="#fff" />
        </shape>
    </item>
</layer-list>

