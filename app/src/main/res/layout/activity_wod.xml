<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_16">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/circle_size_50"
                android:layout_height="@dimen/circle_size_50"
                android:padding="@dimen/margin_16"
                android:src="@drawable/ic_left_arrow" />

            <thanh.ha.ui.textviews.GradientTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/circle_size_50"
                android:layout_marginBottom="@dimen/margin_24"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/wod_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/shape_rectangle_gray" />

        <thanh.ha.ui.textviews.GradientTextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_24"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold"
            tools:text="Some Word" />


        <TextView
            android:id="@+id/tv_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            tools:text="Text messaging" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="@dimen/margin_16"
            android:background="@drawable/shape_rectangle_gray" />

        <TextView
            android:id="@+id/tv_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_size_18"
            tools:text="Text messaging, or textioralso be sent via an Internet connection." />
    </LinearLayout>

</ScrollView>