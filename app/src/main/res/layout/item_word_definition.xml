<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_def"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_12"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/padding_8"
    app:cardElevation="@dimen/padding_4"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_8">

            <TextView
                android:id="@+id/tv_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_premium_badge"
                android:textColor="@color/orange_50"
                android:textSize="@dimen/text_size_24"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_save"
                style="@style/SaveButtonStyle"
                android:src="@drawable/ic_heart"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_definition"
            style="@style/WordDefinitionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="@dimen/margin_8"
            android:background="@color/gray_30" />

        <TextView
            android:id="@+id/tv_example"
            style="@style/ExampleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_8">

            <ImageView
                android:id="@+id/btn_up"
                style="@style/ThumbIconStyle"
                android:src="@drawable/ic_thumb_up"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_thumb_up_value"
                style="@style/ThumbValueStyle" />

            <ImageView
                android:id="@+id/btn_down"
                style="@style/ThumbIconStyle"
                android:background="@drawable/shape_thumb_down_background"
                android:src="@drawable/ic_thumb_down" />

            <TextView
                android:id="@+id/tv_thumb_down_value"
                style="@style/ThumbValueStyle" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/blue_50"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>